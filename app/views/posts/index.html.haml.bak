.indexp
  .container
    .row
      .col-md-12
    .row
      .col-md-12
      %post_count 
        = @posts.count 
        questions have been asked.  
        = link_to "Ask a Question", new_post_path(@post), class: "btn btn-primary ml-2 mt-1"
    - @posts.each do |post|
      .row
        .col-md-6.box
          %h4= link_to post.title, post_path(post)
          %posted_by Posted by 
          - id = post.user.id
            - @data = JSON.parse(open("http://localhost:1212/v1/accounts/#{@id}" ).read, symbolize_names: true)[:data]
              = "%{first_name}" % @data
